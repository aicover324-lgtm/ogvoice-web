# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ogvoice

# Auth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace_me_with_32+_chars_random

# Optional OAuth (Google)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# S3-compatible storage (MinIO for local dev)
S3_REGION=us-east-1
S3_BUCKET=ogvoice
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minio
S3_SECRET_ACCESS_KEY=minio12345
S3_FORCE_PATH_STYLE=true

# RunPod (training)
# RUNPOD_API_KEY=...
# RUNPOD_ENDPOINT_ID=...

# Upload limits (bytes)
UPLOAD_MAX_FILE_BYTES_FREE=104857600
UPLOAD_MAX_FILE_BYTES_PRO=524288000
UPLOAD_MAX_DATASET_BYTES_FREE=524288000
UPLOAD_MAX_DATASET_BYTES_PRO=5368709120

# Image upload limits (bytes)
UPLOAD_MAX_IMAGE_BYTES=10485760

# Stripe (test mode)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_PRO_MONTHLY=

# Optional (recommended for production): Upstash Redis for distributed rate limiting
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Automatic cleanup
PURGE_RETENTION_DAYS=14
PURGE_CRON_SECRET=
