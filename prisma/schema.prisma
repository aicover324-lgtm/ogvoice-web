generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UploadAssetType {
  dataset_audio
  song_input
  generated_output
  avatar_image
  voice_cover_image
}

enum JobStatus {
  queued
  running
  succeeded
  failed
}

enum PlanTier {
  free
  pro
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String?
  name         String?
  image        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Auth.js / NextAuth
  accounts Account[]
  sessions Session[]

  // Product
  voiceProfiles  VoiceProfile[]
  uploadAssets   UploadAsset[]
  trainingJobs   TrainingJob[]
  generationJobs GenerationJob[]
  subscription   Subscription?
  auditLogs      AuditLog[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model VoiceProfile {
  id          String    @id @default(cuid())
  userId      String
  name        String
  description String?
  language    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  user           User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  assets         UploadAsset[]
  trainingJobs   TrainingJob[]
  versions       VoiceModelVersion[]
  generationJobs GenerationJob[]

  @@index([userId, deletedAt, createdAt])
}

model UploadAsset {
  id             String          @id @default(cuid())
  userId         String
  voiceProfileId String?
  type           UploadAssetType
  fileName       String
  fileSize       Int
  mimeType       String
  storageKey     String
  createdAt      DateTime        @default(now())

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  voiceProfile VoiceProfile? @relation(fields: [voiceProfileId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([voiceProfileId, createdAt])
}

model TrainingJob {
  id             String    @id @default(cuid())
  userId         String
  voiceProfileId String
  datasetAssetId String?
  datasetKey     String?
  artifactKey    String?
  runpodRequestId String?
  status         JobStatus @default(queued)
  progress       Int       @default(0)
  logsUrl        String?
  errorMessage   String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  voiceProfile VoiceProfile       @relation(fields: [voiceProfileId], references: [id], onDelete: Cascade)
  modelVersion VoiceModelVersion?

  @@index([userId, createdAt])
  @@index([voiceProfileId, createdAt])
  @@index([runpodRequestId])
}

model VoiceModelVersion {
  id               String   @id @default(cuid())
  voiceProfileId   String
  jobId            String   @unique
  modelArtifactKey String
  createdAt        DateTime @default(now())

  voiceProfile VoiceProfile @relation(fields: [voiceProfileId], references: [id], onDelete: Cascade)
  job          TrainingJob  @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([voiceProfileId, createdAt])
}

model GenerationJob {
  id             String    @id @default(cuid())
  userId         String
  voiceProfileId String
  inputAssetId   String?
  status         JobStatus @default(queued)
  progress       Int       @default(0)
  outputAssetId  String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  voiceProfile VoiceProfile @relation(fields: [voiceProfileId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([voiceProfileId, createdAt])
}

model Subscription {
  id                   String    @id @default(cuid())
  userId               String    @unique
  stripeCustomerId     String?
  stripeSubscriptionId String?
  status               String
  plan                 PlanTier  @default(free)
  currentPeriodEnd     DateTime?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  ip        String?
  meta      Json?
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([action, createdAt])
}
